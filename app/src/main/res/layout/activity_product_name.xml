<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    tools:context=".productManagerHomePage.ui.productPage.ProductNameActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.70">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Product name"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can write the name in Arabic and english"
                android:textColor="@color/appMainColor"
                android:textSize="25sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"

                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/appMainColoro" />




            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="الاسم بالعربية"
                android:textColor="@color/appMainColor"
                android:textSize="13sp"

                app:layout_constraintEnd_toEndOf="@+id/con11"
                app:layout_constraintTop_toBottomOf="@+id/con10" />


            <androidx.cardview.widget.CardView
                android:id="@+id/con11"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginTop="32dp"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/con10"
                app:layout_constraintWidth_percent="0.90"

                app:strokeColor="@color/border"
                app:strokeWidth="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/card_full_white"

                    >


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="الاسم بالعربية"
                        android:importantForAutofill="no"
                        android:padding="10dp"
                        android:paddingStart="22dp"
                        android:textColor="@color/appMainColor"
                        android:textColorHint="@color/border"
                        android:textSize="13sp"

                        app:layout_constraintWidth_percent="0.75" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Product In English"
                android:textColor="@color/appMainColor"
                android:textSize="13sp"

                app:layout_constraintStart_toStartOf="@+id/con10"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />


            <androidx.cardview.widget.CardView
                android:id="@+id/con10"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginTop="32dp"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintWidth_percent="0.90"
                app:strokeColor="@color/border"

                app:strokeWidth="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/card_full_white"

                    >


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="Product In English"
                        android:importantForAutofill="no"
                        android:padding="10dp"
                        android:paddingStart="22dp"
                        android:textColor="@color/appMainColor"
                        android:textColorHint="@color/border"
                        android:textSize="13sp"

                        app:layout_constraintWidth_percent="0.75" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:minHeight="48dp"
                app:cardBackgroundColor="@color/appMainColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="@+id/con11"
                app:layout_constraintStart_toStartOf="@+id/con11"
                app:layout_constraintTop_toBottomOf="@+id/con11">

                <Button
                    android:id="@+id/confirmBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_style"
                    android:text="confirm"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>