<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"

    tools:context=".createPOS.PosCatCompanyDataActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="689dp"
        android:layout_height="605dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.70">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/roboto"
                android:text="POS CATEGORIES"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please add your company data"
                android:textColor="@color/appMainColor"
                android:textSize="30sp"
                android:layout_marginStart="40dp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="27sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
            <View
                android:id="@+id/titleDividerNoCustom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#EFEFEF"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/upload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleDividerNoCustom" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="please Upload your logo"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_marginStart="40dp"
                android:layout_height="51dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="12dp"
                android:hint="Branch Name"
                android:focusable="true"
                app:placeholderTextColor="@color/border"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstname"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="21dp"
                android:hint="Owner Name"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:placeholderTextColor="@color/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstNameTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastname"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TaxNoTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_marginStart="40dp"
                android:layout_height="51dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="12dp"
                android:hint="Tax No."
                android:focusable="true"
                app:placeholderTextColor="@color/border"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstNameTextInputLayout"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TaxNo"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    app:placeholderText="write your First name"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TaxrecordTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="21dp"
                android:hint="Tax record"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:placeholderTextColor="@color/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstNameTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/lastNameTextInputLayout"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Taxrecord"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    app:placeholderText="write your First name"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/PhoneNoTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_marginStart="40dp"
                android:layout_height="51dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="12dp"
                android:hint="Phone No."
                android:focusable="true"
                app:placeholderTextColor="@color/border"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TaxNoTextInputLayout"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PhoneNo"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    app:placeholderText="write your First name"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EmailTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="21dp"
                android:hint="Email"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:placeholderTextColor="@color/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstNameTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/TaxrecordTextInputLayout"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Email"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    app:placeholderText="write your First name"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/login"
                android:layout_width="611dp"
                android:layout_height="63dp"
                android:layout_marginTop="30dp"
                android:minHeight="45dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/appMainColor"
                app:cardElevation="10dp"

                app:layout_constraintStart_toStartOf="@id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/EmailTextInputLayout">

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_style"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Confirm"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>