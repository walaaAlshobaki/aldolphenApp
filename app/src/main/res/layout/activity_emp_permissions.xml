<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".employee_permissions.EmpPermissionsActivity">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="61dp"
        android:layout_height="74dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:id="@+id/textView3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="113dp"
    android:layout_marginTop="48dp"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView3" >
    <TextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Mohamed Gamal"
        android:textColor="@color/appMainColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="18sp"
        app:autoSizeStepGranularity="1sp"/>
    <TextView
        android:id="@+id/emp_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Cashier"
        android:textColor="@color/appMainColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"/>
    <TextView
        android:id="@+id/emp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="mohammad.gamal@gmail.com"
        android:textColor="@color/appMainColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"/>

</LinearLayout>

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginStart="1108dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="229dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Mohamed Gamal"
        android:textColor="@color/appMainColor"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/userImage"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="@+id/userImage" />
    <androidx.cardview.widget.CardView
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/userName"
        app:layout_constraintStart_toStartOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@id/userImage">

        <LinearLayout
            android:id="@+id/sign"
            android:layout_width="124dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/red">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginStart="29dp"
                android:src="@drawable/ic_left_arrow"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="1sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Permissions"
        android:textColor="@color/appMainColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="18sp"
        app:autoSizeStepGranularity="1sp"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>



    <Button
        android:id="@+id/confirm"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:background="@color/appMainColor"
        android:text="confirm"
        android:layout_marginStart="1072dp"
        android:layout_marginTop="292dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/right_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.35"
        android:translationX="120dp"
        android:translationY="50dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="1005dp"
        android:layout_height="418dp"
        android:layout_marginTop="53dp"
        tools:listitem="@layout/emp_permissions_item_cell"
        app:layout_constraintStart_toStartOf="@+id/Permissions"
        app:layout_constraintTop_toBottomOf="@+id/Permissions" />

</androidx.constraintlayout.widget.ConstraintLayout>