<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    tools:context=".addEmp.AddEmployeeActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="933dp"
        android:layout_height="550dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.70">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:text="New User"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please write your new user data"
                android:textColor="@color/appMainColor"
                android:textSize="25sp"
                android:layout_marginStart="50dp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="1sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstNameTextInputLayout"
            android:background="@drawable/back"
            android:layout_width="0dp"
            android:layout_marginStart="40dp"
            android:layout_height="51dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="12dp"
            android:hint="User Name"
            android:focusable="true"
            app:placeholderTextColor="@color/border"
            android:textColorHint="@color/appMainColor"
            app:hintTextColor="@color/appMainColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintWidth_percent="0.45">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UserName"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="13dp"
                app:placeholderTextColor="@color/border"
                android:textColorHint="@color/border"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/appMainColor" />
        </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="21dp"
                android:hint="Phone No."
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:placeholderTextColor="@color/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstNameTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PhoneNo"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TaxNoTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_marginStart="40dp"
                android:layout_height="51dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="12dp"
                android:hint="Email"
                android:focusable="true"
                app:placeholderTextColor="@color/border"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstNameTextInputLayout"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Email"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    app:placeholderText="write your First name"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/BranchTextInputLayout"
                android:background="@drawable/back"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="21dp"
                android:hint="Branch"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="@color/appMainColor"
                app:hintTextColor="@color/appMainColor"
                app:placeholderTextColor="@color/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstNameTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/lastNameTextInputLayout"
                app:layout_constraintWidth_percent="0.45">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Branch"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="13dp"
                    app:placeholderTextColor="@color/border"
                    app:placeholderText="write your First name"
                    android:textColorHint="@color/border"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/appMainColor" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Permission"
                android:textColor="@color/appMainColor"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/TaxNoTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/TaxNoTextInputLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                tools:listitem="@layout/permission_item_cell"
                app:layout_constraintStart_toStartOf="@+id/TaxNoTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />
            <androidx.cardview.widget.CardView
                android:id="@+id/login"
                android:layout_width="853dp"
                android:layout_height="63dp"
                android:layout_marginTop="30dp"
                android:minHeight="45dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/appMainColor"
                app:cardElevation="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView">

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="853dp"
                    android:layout_height="63dp"
                    android:background="@drawable/btn_style"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Confirm"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>