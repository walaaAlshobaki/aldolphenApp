<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Varient:"
            android:textColor="@color/appMainColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Red/100gm"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView47"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Modifier Info:"
            android:textColor="@color/appMainColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView47" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@+id/textView48"
            app:layout_constraintTop_toBottomOf="@+id/textView48">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Sales Price"
                android:textColor="@color/appMainColor"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/con2"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_full_white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.17"

                app:strokeColor="@color/border"
                app:strokeWidth="2dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout


                    android:layout_width="match_parent"
                    android:layout_height="51dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="5 SAR"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/appMainColoro2"
                         />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Cost"
                android:textColor="@color/appMainColor"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/con3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/con3"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_full_white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@+id/con2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.17"

                app:strokeColor="@color/border"
                app:strokeWidth="2dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout


                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="50"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/appMainColoro2"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Type"
                android:textColor="@color/appMainColor"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/con4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Available Quantity"
                android:textColor="@color/appMainColor"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/con5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/con5"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_full_white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@+id/con3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.17"

                app:strokeColor="@color/border"
                app:strokeWidth="2dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout


                    android:layout_width="match_parent"
                    android:layout_height="51dp">



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="50"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/appMainColoro2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="SKU"
                android:textColor="@color/appMainColor"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/con6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/con6"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_full_white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@+id/con5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.17"

                app:strokeColor="@color/border"
                app:strokeWidth="2dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout


                    android:layout_width="match_parent"
                    android:layout_height="51dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="50"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/appMainColoro2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradinat_background"
                android:elevation="12dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Barcode"
                android:textColor="@color/appMainColor"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/con7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/con7"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/card_full_white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@+id/con6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.17"

                app:strokeColor="@color/border"
                app:strokeWidth="2dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout


                    android:layout_width="match_parent"
                    android:layout_height="51dp"></androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove"
                app:layout_constraintBottom_toBottomOf="@+id/con3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/con3"
                app:tint="@color/appMainColor" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>